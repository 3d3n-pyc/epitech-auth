generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_POSTGRES_URL")
  directUrl = env("DATABASE_POSTGRES_URL_NON_POOLING")
}

model User {
  id         Int        @id @default(autoincrement())
  azureOid   String     @unique // Microsoft Entra ID Object ID
  email      String?    @unique
  name       String?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt @default(now())
  authCodes  AuthCode[]
}

model AuthCode {
  id              Int       @id @default(autoincrement())
  code            String    @unique // Code unique pour l'authentification
  userId          Int?
  user            User?     @relation(fields: [userId], references: [id])
  status          String    @default("pending") // pending, authenticated, expired
  authUrl         String?   // URL d'authentification générée
  codeVerifier    String?   // Pour PKCE
  expiresAt       DateTime
  createdAt       DateTime  @default(now())
  authenticatedAt DateTime?

  @@index([userId])
}
